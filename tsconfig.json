{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "removeComments": false,
    "noEmitOnError": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.json",
    "templates",
    "types"
  ]
}