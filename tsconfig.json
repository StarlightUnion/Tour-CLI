{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "noEmitOnError": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist"
  },
  "include": [
    "./bin/**/*",
    "./scripts/**/*",
    "./utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.json",
    "templates"
  ]
}