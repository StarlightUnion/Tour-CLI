{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "removeComments": false,
    "noEmitOnError": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./dist/types"
  },
  "include": [
    "./bin/**/*",
    "./scripts/**/*",
    "./utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.json",
    "templates"
  ]
}